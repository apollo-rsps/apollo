root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = false

[*.java]
indent_style=tab
tab_width=4

[*.{kt, kts}]
indent_style=space
tab_width=4
continuation_indent_size=4

[*.gradle]
indent_style=space
tab_width=4
continuation_indent_size=4

[*.rb]
indent_style=space
indent_size=2
